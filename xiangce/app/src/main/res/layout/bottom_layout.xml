<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="55dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/tab_sy">
        <ImageView
            android:layout_width="32dp"
            android:background="@drawable/sy_bg"
            android:layout_height="32dp"
            android:id="@+id/tab_sy_iv"/>
        <TextView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:id="@+id/tab_sy_tv"
            android:text="@string/sy"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/tab_wd">
        <ImageView
            android:layout_width="32dp"
            android:background="@drawable/wo_bg"
            android:layout_height="32dp"
            android:id="@+id/tab_wd_iv"/>
        <TextView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:text="@string/wd"
            android:id="@+id/tab_wd_tv"/>
    </LinearLayout>
</LinearLayout>