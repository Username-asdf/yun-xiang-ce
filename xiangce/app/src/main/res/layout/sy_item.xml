<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">



    <RelativeLayout
        android:id="@+id/ll_item1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/bg_borderr"
            android:src="@drawable/ic_right"/>
            <CheckBox
                android:id="@+id/cb_item1"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_item2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/bg_borderr"
                android:src="@drawable/ic_right"/>
            <CheckBox
                android:id="@+id/cb_item2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_item3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/bg_borderr"
                android:src="@drawable/ic_right"/>
            <CheckBox
                android:id="@+id/cb_item3"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_item4"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/bg_borderr"
                android:src="@drawable/ic_right"/>
            <CheckBox
                android:id="@+id/cb_item4"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </RelativeLayout>



</LinearLayout>