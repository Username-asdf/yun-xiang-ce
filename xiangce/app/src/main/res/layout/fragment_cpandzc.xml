<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:id="@+id/tv_cz_title"
        android:text="@string/title_text"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_cz_username"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_username_drawable"
            android:drawablePadding="10dp"
            android:hint="@string/username_hint"
            android:paddingLeft="5dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_cz_password"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_password_drawable"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:hint="@string/password_hint"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/btn_cz_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>